# Database (Prisma Accelerate)
DATABASE_URL="prisma://accelerate.prisma-data.net/?api_key=YOUR_API_KEY"
DIRECT_URL="postgresql://user:password@host:5432/database"

# Next Auth / JWT
NEXTAUTH_SECRET="your-secret-key-min-32-characters-long"
NEXTAUTH_URL="http://localhost:3000"

# APEC Credentials (for scraping)
APEC_EMAIL="your-apec-email@example.com"
APEC_PASSWORD="your-apec-password"

# Encryption (for cookie storage in Vercel KV)
ENCRYPTION_KEY="64-character-hex-string-for-aes-256-encryption"

# Vercel KV (Redis)
KV_URL="redis://..."
KV_REST_API_URL="https://..."
KV_REST_API_TOKEN="..."
KV_REST_API_READ_ONLY_TOKEN="..."

# Vercel Blob Storage (optional)
BLOB_READ_WRITE_TOKEN="..."

# Puppeteer (for local development)
PUPPETEER_EXECUTABLE_PATH="/usr/bin/chromium-browser"
PUPPETEER_HEADLESS="true"
PUPPETEER_TIMEOUT="30000"

# Environment
NODE_ENV="development"
