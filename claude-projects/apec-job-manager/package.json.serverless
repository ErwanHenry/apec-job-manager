{
  "name": "apec-job-manager-serverless",
  "version": "2.0.0",
  "description": "APEC Job Manager - Serverless Edition for Vercel",
  "main": "api/index.ts",
  "scripts": {
    "dev": "vercel dev",
    "build": "tsc && prisma generate",
    "deploy": "vercel --prod",
    "deploy:preview": "vercel",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint api/**/*.ts lib/**/*.ts",
    "lint:fix": "eslint api/**/*.ts lib/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "logs": "vercel logs --follow",
    "logs:cron": "vercel logs /api/cron/sync-jobs --follow"
  },
  "keywords": [
    "apec",
    "job-automation",
    "serverless",
    "vercel",
    "puppeteer",
    "chromium"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "@prisma/adapter-neon": "^5.7.0",
    "@neondatabase/serverless": "^0.9.0",
    "@sparticuz/chromium": "^119.0.2",
    "@vercel/blob": "^0.16.0",
    "@vercel/kv": "^1.0.1",
    "@vercel/node": "^3.0.12",
    "puppeteer-core": "^21.6.1",
    "joi": "^17.11.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "prisma": "^5.7.0",
    "typescript": "^5.3.3",
    "vercel": "^33.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
