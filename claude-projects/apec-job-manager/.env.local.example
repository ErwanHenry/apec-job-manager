# Database
DATABASE_URL="postgresql://user:password@localhost:5432/apec_job_manager"

# NextAuth
NEXTAUTH_SECRET="your-secret-key-here-generate-with-openssl-rand-base64-32"
NEXTAUTH_URL="http://localhost:3000"

# APEC Configuration
APEC_EMAIL="your-apec-email@example.com"
APEC_PASSWORD="your-apec-password"
APEC_SESSION_COOKIE="your-apec-session-cookie"

# Auto-sync Configuration
AUTO_SYNC_ENABLED="false"
SYNC_CRON_SCHEDULE="0 */6 * * *"  # Every 6 hours

# Email Configuration (optional)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
NOTIFICATION_EMAIL="admin@example.com"

# Application Settings
NODE_ENV="development"
LOG_LEVEL="info"

# Rate Limiting
RATE_LIMIT_WINDOW_MS="900000"  # 15 minutes
RATE_LIMIT_MAX_REQUESTS="100"

# Puppeteer Configuration
PUPPETEER_HEADLESS="true"
PUPPETEER_TIMEOUT="30000"
PUPPETEER_VIEWPORT_WIDTH="1920"
PUPPETEER_VIEWPORT_HEIGHT="1080"

# Vercel (Production)
# VERCEL_URL will be automatically set by Vercel
# DATABASE_URL will be set via Vercel Postgres integration
